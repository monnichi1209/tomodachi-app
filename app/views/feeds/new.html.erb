<h1>新規投稿</h1>

<% if @feed.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@feed.errors.count, "error") %> prohibited this feed from being saved:</h2>

    <ul>
    <% @feed.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @feed, url: confirm_feeds_path, method: :post, local: true) do |form| %>
  <%= form.label :content %>
  <%= form.text_area :content, id: :feed_content %>
  <%= form.label :image %>
  <%= form.file_field :image, id: :feed_image %>
  <br>
  <%= form.submit "新規投稿" %>
<% end %>

